<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="customerManager" class="org.easymock.EasyMock"
		factory-method="createMock">
		<constructor-arg
			value="org.salgar.swf_statemachine.techdemo.manager.CustomerManager" />
	</bean>
	<bean id="orderManager" class="org.easymock.EasyMock"
		factory-method="createMock">
		<constructor-arg
			value="org.salgar.swf_statemachine.techdemo.manager.OrderManager" />
	</bean>
	<bean id="applicationContextContainer"
		class="org.salgar.swf_statemachine.impl.context.ApplicationContextContainer"
		scope="singleton" factory-method="getInstance"/>
</beans>
