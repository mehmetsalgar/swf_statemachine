	<profiles>
		<profile>
			<id>referenceStateMachine</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-compiler-plugin</artifactId>
						<configuration>
							<source>1.7</source>
							<target>1.7</target>
							<!-- ensure that the compile uses the same encoding as the file encoding 
								of the *.java -->
							<compilerArguments>
								<encoding>utf8</encoding>
							</compilerArguments>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.fornax.toolsupport</groupId>
						<artifactId>fornax-oaw-m2-plugin</artifactId>
						<executions>
							<execution>
								<id>statemachine</id>
								<goals>
									<goal>run-workflow</goal>
								</goals>
								<phase>generate-sources</phase>
								<configuration>
									<workflowEngine>mwe</workflowEngine>
									<workflowDescriptor>workflowReferenceStateMachine.mwe</workflowDescriptor>
								</configuration>
